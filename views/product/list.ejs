<%- include ../partials/header.ejs %> 
<%- include ../partials/top_nav.ejs %>

<main class="container">
  <br />
  <a href="/products/add" class="btn btn-danger"
    ><i class="fa-regular fa-plus"></i>add product</a
  >
  <br />
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Handle</th>
      </tr>
    </thead>

    <tbody>
      <% for (let index = 0; index < ProductList.length; index++){%>
      <tr>
        <td><%= ProductList[index].name %></td>
        <td><%= ProductList[index].company %></td>
        <td><%= ProductList[index].price %></td>
        <td>
        <a
          href="/products/edit/<%= ProductList[index].id%>"class="btn btn-info btn-sm">
          <i class="fa-solid fa-file-pen fa-lg"> </i> Edit</a
        ></td>
        <td>
          <a
          href="/products/Delete/<%= ProductList[index].id%>"class="btn btn-info btn-sm" >
          <i class="fa-light fa-trash-can fa-bounce fa-lg" style="color: #db1f1f;"></i>
          
          Delete
        
        
        </a>
          </td>
      </tr>
      <%} %>
    </tbody>
  </table>
</main>

