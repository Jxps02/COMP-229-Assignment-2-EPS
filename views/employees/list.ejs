<%- include ../partials/header.ejs %> 
<%- include ../partials/top_nav.ejs %>

<main class="container">
  <br />
  <a href="/employees/add" class="btn btn-danger"
    ><i class="fa-regular fa-plus"></i>Add Employee</a
  >
  <br />
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Contact</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% for (let index = 0; index < employeeList.length; index++){%>
      <tr>
        <td><%= employeeList[index].name %></td>
        <td><%= employeeList[index].address %></td>
        <td><%= employeeList[index].contact %></td>
        <td>
        <a
          href="/employees/edit/<%= employeeList[index].id%>" class="btn btn-info btn-sm">
          <i class="fa-solid fa-file-pen fa-lg"> </i> Edit</a
        ></td>
        <td>
          <a
          href="/employees/delete/<%= employeeList[index].id%>" class="btn btn-info btn-sm" >
          <i class="fa-light fa-trash-can fa-bounce fa-lg" style="color: #db1f1f;"></i>
          
          Delete
        
        
        </a>
          </td>
      </tr>
      <%} %>
    </tbody>
  </table>
</main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
